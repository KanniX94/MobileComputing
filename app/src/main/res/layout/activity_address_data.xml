<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingTop="20dp"
    android:background="@drawable/gradient">

    <LinearLayout
        android:id="@+id/list_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationY="-170dp"
        android:gravity="center_horizontal"
        android:padding="2dp" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:src="@drawable/back_foreground" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:lines="1"
            android:gravity="center_vertical"
            android:textColor="#FFF"
            android:text="Back" />

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address Data"
        android:layout_marginTop="-80dp"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:translationY="-40dp"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let us know where you life so that\nwe can find the optimal care giver\nfor you which lives near by"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:translationY="-20dp"
        android:lineSpacingExtra="10sp"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/etStreet"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@android:color/white"
            android:hint="Street"
            android:inputType="text"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/etHausnummer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:backgroundTint="@android:color/white"
            android:hint="No."
            android:inputType="number"
            android:textColorHint="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etZipCode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@android:color/white"
            android:hint="ZIP Code"
            android:inputType="number"
            android:textColorHint="@android:color/white" />


        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:hint="City"
            android:inputType="text"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/etCountry"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:hint="Country"
        android:inputType="text"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@android:color/white"
        />

    <Button
        android:id="@+id/btnAddressNext"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:padding="12dp"
        android:textSize="22sp"
        android:textColor="#888"
        android:textStyle="bold"
        android:background="#FFF"
        android:text="Next"
        android:gravity="center"

        />
</LinearLayout>
