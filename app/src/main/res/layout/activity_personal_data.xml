<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/gradient">

    <LinearLayout
        android:id="@+id/btnBackPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationY="-120dp"
        android:gravity="center_horizontal"
        android:padding="2dp" >

        <ImageView

            android:layout_width="30dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:src="@drawable/back_foreground" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:lines="1"
            android:gravity="center_vertical"
            android:textColor="#FFF"
            android:text="Back" />

    </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Data"
        android:layout_marginTop="-60dp"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:translationY="-40dp"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We need your contact details to\nconnect you with care givers"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:translationY="-20dp"
        android:lineSpacingExtra="10sp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/etGenderrr"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:hint="Gender"
        android:inputType="text"
        android:textSize="18sp"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@android:color/white"
        />

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true">

        <CheckBox
            android:id="@+id/checkBoxMan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#FFF"
            android:padding="7dp"
            android:buttonTint="#FFF"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="90dp"
            android:text="Man" />
        <CheckBox
            android:id="@+id/checkBoxWoman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#FFF"
            android:padding="7dp"
            android:buttonTint="#FFF"
            android:layout_marginRight="60sp"
            android:layout_marginLeft="20dp"
            android:text="Woman" />
    </LinearLayout>


    <EditText
        android:id="@+id/etPersonalName"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:hint="Name"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/etPersonalSurName"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:hint="Last Name"
        android:inputType="text"
        />


    <EditText
        android:id="@+id/etPersonalBD"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:hint="yyyy-mm-dd"
        android:inputType="text"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@android:color/white"
        />


    <EditText
        android:id="@+id/etPersonalPhone"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:hint="Phone"
        android:inputType="text"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@android:color/white"
        />

    <Button
        android:id="@+id/btnPersonalNext"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:padding="12dp"
        android:textSize="22sp"
        android:textColor="#888"
        android:textStyle="bold"
        android:background="#FFF"
        android:text="Next"
        android:gravity="center"

        />


</LinearLayout>
